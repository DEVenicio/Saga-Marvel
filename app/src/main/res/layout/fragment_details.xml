<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.DetailsFragment">

    <ImageView
        android:id="@+id/iv_poster_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_poster_movie_detail">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Title:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_title_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_title_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_title_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_plot_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_input_title_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Plot:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_plot_movie_detail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_input_title_movie_detail"
                android:layout_alignTop="@id/tv_plot_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_plot_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_year_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_input_plot_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Year:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_year_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_input_plot_movie_detail"
                android:layout_alignTop="@id/tv_year_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_year_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_rated_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_year_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Rated:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_rated_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_year_movie_detail"
                android:layout_alignTop="@id/tv_rated_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_rated_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_released_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rated_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Released:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_released_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rated_movie_detail"
                android:layout_alignTop="@id/tv_released_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_released_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_runtime_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_released_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Runtime:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_runtime_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_released_movie_detail"
                android:layout_alignTop="@id/tv_runtime_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_runtime_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_genre_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_runtime_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Genre:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_genre_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_runtime_movie_detail"
                android:layout_alignTop="@id/tv_genre_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_genre_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_director_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_genre_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Director:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_director_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_genre_movie_detail"
                android:layout_alignTop="@id/tv_director_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_director_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_writer_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_director_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Writer:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_writer_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_director_movie_detail"
                android:layout_alignTop="@id/tv_writer_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_writer_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_actors_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_input_writer_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Actors:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_input_actors_movie_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_input_writer_movie_detail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/tv_actors_movie_detail"
                android:textColor="@color/white"
                android:textSize="14sp" />



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>