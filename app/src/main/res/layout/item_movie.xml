<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_movie"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:background="@drawable/container_border_movie"
    app:cardCornerRadius="18dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_container_iv_movie"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/iv_poster_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_date_movie"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:text="Titulo do filme" />

        <TextView
            android:id="@+id/tv_date_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_gender_movie"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:ignore="SmallSp"
            tools:text="02 May 2008" />

        <TextView
            android:id="@+id/tv_gender_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            android:textColor="@color/white"
            tools:text="Gender movie" />

    </RelativeLayout>

</FrameLayout>